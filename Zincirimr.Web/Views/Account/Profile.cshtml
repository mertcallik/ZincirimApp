@using System.Security.Claims

@section style
{
    .card {
    transition: all 0.3s ease;
    }
    .card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 20px rgba(0,0,0,0.1);
    }
    .shine {
    position: relative;
    overflow: hidden;
    }
    .shine::after {
    content: '';
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: linear-gradient(
    to right, 
    rgba(255,255,255,0) 0%,
    rgba(255,255,255,0.3) 50%,
    rgba(255,255,255,0) 100%
    );
    transform: rotate(30deg);
    transition: 0.5s;
    opacity: 0;
    }
    .shine:hover::after {
    left: 100%;
    opacity: 1;
    }
    
    .topbar {
    height: 0;
    line-height: 0; /* Metni gizlemek için */
    padding: 0; /* İç boşlukları kaldır */
    }
    .topbar ,.top {
    visibility:hidden;
    }
}
