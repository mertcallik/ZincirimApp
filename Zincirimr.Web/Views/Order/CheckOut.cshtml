@model OrderViewModel
@section style
{
    .topbar {
    height: 0;
    line-height: 0; /* Metni gizlemek için */
    padding: 0; /* İç boşlukları kaldır */
    }
    .topbar ,.top {
    visibility:hidden;
    }
}
<div class="flex flex-col items-center border-b bg-white py-4 sm:flex-row sm:px-10 lg:px-20 xl:px-32">
    <a href="#" class="text-2xl font-bold text-gray-800">Iyzico güvencesi ile güvenli öde!</a>
    <div class="mt-4 py-2 text-xs sm:mt-0 sm:ml-auto sm:text-base">
        <div class="relative">
            <ul class="relative flex w-full items-center justify-between space-x-2 sm:space-x-4">
                <li class="flex items-center space-x-3 text-left sm:space-x-4">
                    <a class="flex h-6 w-6 items-center justify-center rounded-full bg-emerald-200 text-xs font-semibold text-emerald-700" href="#">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
                        </svg>
                    </a>
                    <span class="font-semibold text-gray-900">Alışveriş</span>
                </li>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
                </svg>
                <li class="flex items-center space-x-3 text-left sm:space-x-4">
                    <a class="flex h-6 w-6 items-center justify-center rounded-full bg-gray-600 text-xs font-semibold text-white ring ring-gray-600 ring-offset-2" href="#">2</a>
                    <span class="font-semibold text-gray-900">Kargo</span>
                </li>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
                </svg>
                <li class="flex items-center space-x-3 text-left sm:space-x-4">
                    <a class="flex h-6 w-6 items-center justify-center rounded-full bg-gray-400 text-xs font-semibold text-white" href="#">3</a>
                    <span class="font-semibold text-gray-500">Ödeme</span>
                </li>
            </ul>
        </div>
    </div>
</div>
<div class="grid sm:px-10 lg:grid-cols-2 lg:px-20 xl:px-32">
    <div class="px-4 pt-8">
        <p class="text-xl font-medium">Sipariş Özeti</p>
        <p class="text-gray-400">Ürünlerinizi kontrol edin ve uygun bir kargo yöntemi seçin.</p>
        <div class="mt-8 space-y-3 rounded-lg border bg-white px-2 py-4 sm:px-6">
                @foreach (var item in Model.Cart.CartItems)
                {
                    <div class="flex flex-col rounded-lg bg-white sm:flex-row">
                        <img class="m-2 h-24 w-28 rounded-md border object-cover object-center" src="/img/Product/@item.Product.Image" />
                        <div class="flex w-full flex-col px-4 py-4">
                            <span class="font-semibold">@item.Product.Name</span>
                            <span class="float-right text-gray-400">@item.Quantity x @item.Product.Price</span>
                            <p class="text-lg font-bold">@((item.Product.Price * item.Quantity).Value.ToString("##,###")) TL</p>
                        </div>
                    </div>
                }
            
        </div>
        <p class="mt-8 text-lg font-medium">Adres Bilgileriniz</p>
        <div>
            <div class="card rounded-3 mt-3">
                <div class="card-body">
                    <div class="row">
                        <div class="mb-3 d-flex">
                            <div class="card address-card w-100">
                                <div class="card-header">
                                    <div class="card-title">@Model.Address.State / @Model.Address.Street</div>
                                </div>
                                <div class="card-body">
                                    <p>@Model.Address.Name @Model.Address.SurName</p>
                                    <p>@Model.Address.Street</p>
                                    <p>@Model.Address.FullAddress</p>
                                    <p>@Model.Address.City / @Model.Address.State</p>
                                    <p>@Model.Address.ContactPhoneNumber</p>
                                    @if (@Model.Address.IsActive)
                                    {
                                        <strong>Aktif Adresiniz</strong>
                                    }
                                </div>
                                <div class="d-flex mt-3 justify-content-between p-3">
                                    <a asp-action="ShowAddresses" asp-controller="Address" class="btn btn-outline-dark">Adresi Değiştir</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="mt-10 bg-gray-50 px-4 pt-8 lg:mt-0">
        <p class="text-xl font-medium">Ödeme Detayları</p>
        <p class="text-gray-400">Ödeme bilgilerinizi sağlayarak siparişinizi tamamlayın.</p>
        <form asp-action="CheckOut" method="post">
            <div>
                <label for="card-holder" class="mt-4 mb-2 block text-sm font-medium">Kart Üzerindeki İsim</label>
                <div class="relative">
                    <input asp-for="CardHolderName" class="w-full rounded-md border border-gray-200 px-4 py-3 pl-11 text-sm uppercase shadow-sm outline-none focus:z-10 focus:border-blue-500 focus:ring-blue-500" placeholder="Kart Üzerindeki İsim" />
                </div>
                <label for="card-no" class="mt-4 mb-2 block text-sm font-medium">Kart Bilgileri</label>
                <div class="flex">
                    <div class="relative w-7/12 flex-shrink-0">
                        <input  id="card-no" asp-for="CardNumber" class="w-full rounded-md border border-gray-200 px-2 py-3 pl-11 text-sm shadow-sm outline-none focus:z-10 focus:border-blue-500 focus:ring-blue-500" placeholder="Kart Numarası" />
                    </div>
                    <input  asp-for="ExpireDate" class="w-full rounded-md border border-gray-200 px-2 py-3 text-sm shadow-sm outline-none focus:z-10 focus:border-blue-500 focus:ring-blue-500" placeholder="AA/YY" />
                    <input  asp-for="Cvc" class="w-1/6 flex-shrink-0 rounded-md border border-gray-200 px-2 py-3 text-sm shadow-sm outline-none focus:z-10 focus:border-blue-500 focus:ring-blue-500" placeholder="CVC" />
                </div>
                <!-- Toplam -->

                <div asp-validation-summary="ModelOnly"></div>
            </div>
            <button type="submit" class="mt-4 mb-8 w-full rounded-md bg-gray-900 px-6 py-3 font-medium text-white">Siparişi Tamamla</button>
        </form>
        <div class="mt-6 border-t border-b py-2">
            <div class="flex items-center justify-between">
                <p class="text-sm font-medium text-gray-900">Ara Toplam</p>
                <p class="font-semibold text-gray-900">@Model.Cart.CalculateTotal().ToString("##,###")TL</p>
            </div>
            <div class="flex items-center justify-between">
                <p class="text-sm font-medium text-gray-900">Kargo</p>
                <p class="font-semibold text-gray-900">ÜCRETSİZ</p>
            </div>
        </div>
        <div class="mt-6 flex items-center justify-between">
            <p class="text-sm font-medium text-gray-900">Toplam</p>
            <p class="text-2xl font-semibold text-gray-900">@Model.Cart.CalculateTotal().ToString("##,###")TL</p>
        </div>

    </div>
</div>

