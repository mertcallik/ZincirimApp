@model CategoryListViewModel
@{
}



<div class="container mt-4">
    <h2 class="mb-3">Browse By Category</h2>

    <div class="row row-cols-2 row-cols-md-3 row-cols-lg-6 g-3 mb-4">
        <a asp-action="Index" asp-controller="Home">
            <div class="col text-center">
                <div class="p-3 border rounded">
                    <i class="bi bi-app category-icon"></i>
                    <p class="mt-2 mb-0">Tümü</p>
                </div>
            </div>
        </a>
        @foreach (var item in Model.CategoryListViewModels)
        {
            <a asp-action="Index" asp-controller="Home" asp-route-category="@item.Url">
                <div class="col text-center">
                    <div class="p-3 border rounded">
                        <i class="@item.bootstrapicon"></i>
                        <p class="mt-2 mb-0">@item.Name</p>
                    </div>
                </div>
            </a>

        }

    </div>
</div>


    
